# Autoriser l'accès aux fichiers PHP
<FilesMatch "\.php$">
    SetHandler application/x-httpd-php
</FilesMatch>

# Sécuriser le dossier logs (version corrigée)
<FilesMatch "\.(log|sql)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Empêcher l'accès aux fichiers sensibles
<FilesMatch "\.(env|config|ini|bak|backup)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

