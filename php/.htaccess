# Autoriser l'accès aux fichiers PHP
<FilesMatch "\.php$">
    SetHandler application/x-httpd-php
</FilesMatch>

# Sécuriser le dossier logs
<Directory "logs">
    Order Deny,Allow
    Deny from all
</Directory>

