{
    "name": "deliveryp2p/api",
    "description": "API Backend moderne pour l'application de livraison P2P avec système QR code sécurisé",
    "type": "project",
    "require": {
        "php": "^8.2",
        "firebase/php-jwt": "^6.8",
        "endroid/qr-code": "^4.8",
        "phpmailer/phpmailer": "^6.8",
        "stripe/stripe-php": "^13.0",
        "guzzlehttp/guzzle": "^7.8",
        "monolog/monolog": "^3.4",
        "vlucas/phpdotenv": "^5.5",
        "ramsey/uuid": "^4.7",
        "paragonie/sodium_compat": "^1.20",
        "endroid/qr-code-bundle": "^4.0",
        "bacon/bacon-qr-code": "^2.0",
        "chillerlan/php-qrcode": "^4.3",
        "league/oauth2-client": "^2.7",
        "google/recaptcha": "^1.3",
        "symfony/http-foundation": "^6.3",
        "symfony/validator": "^6.3",
        "symfony/serializer": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.4",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "DeliveryP2P\\": "src/",
            "DeliveryP2P\\Core\\": "src/core/",
            "DeliveryP2P\\Models\\": "src/models/",
            "DeliveryP2P\\Services\\": "src/services/",
            "DeliveryP2P\\Utils\\": "src/utils/",
            "DeliveryP2P\\Controllers\\": "src/controllers/",
            "DeliveryP2P\\Middleware\\": "src/middleware/",
            "DeliveryP2P\\Validators\\": "src/validators/",
            "DeliveryP2P\\Exceptions\\": "src/exceptions/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "mkdir -p storage/qr_codes storage/uploads storage/logs"
        ],
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs src/ tests/",
        "cs-fix": "phpcbf src/ tests/",
        "stan": "phpstan analyse src/ tests/"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "endroid/installer": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
